<% layout("layout/boilerplate") %>

  <div class="container d-flex align-items-center justify-content-center my-5">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="card shadow">
          <img src="https://images.unsplash.com/photo-1517217451453-818405428795?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="" class="card-img-top">

          <div class="card-body">
            <h5 class="card-title">Login</h5>
            <form action="/login" method="POST" class="validated-form" novalidate>
              <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" autofocus required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>

              <button class="btn btn-success w-100">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

