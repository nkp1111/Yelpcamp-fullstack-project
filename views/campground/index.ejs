<% layout("layout/boilerplate") %>
  <h1>All Campgrounds</h1>

  <div>
    <% for (let camp of campgrounds) { %>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <img src="<%= camp.image%>" alt="camp background" class="img-fluid">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5>
                <%= camp.title %>
              </h5>
              <p class="card-text">
                <%= camp.description %>
              </p>
              <p>
                <small class="text-muted">
                  <%= camp.location %>
                </small>
              </p>

              <!-- detail view -->
              <a href="/campground/<%=camp._id%>" class="btn btn-primary">View <%= camp.title %> </a>

            </div>
          </div>
        </div>
      </div>
      <%} %>
  </div>