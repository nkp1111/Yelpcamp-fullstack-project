<% layout("layout/boilerplate") %>

<div class="map" id="map" style="width:100%;height:500px"></div>

  <div class="row my-5">
    <div class="col-6 offset-3">
      <h1>All Campgrounds</h1>

      <a href="/campground/new">New campground</a>

      <div>
        <% for (let camp of campgrounds) { %>
          <div class="card mb-3">
            <div class="row">
              <div class="col-md-4">
                <% if(camp.images.length) { %>
                <img src="<%= camp.images[0].url%>" alt="camp background" class="img-fluid">
                <% } else { %>
                <!-- random image if no image is present on campground -->
                <img src="https://images.unsplash.com/photo-1455849318743-b2233052fcff?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1169&q=80" alt="camp background" class="img-fluid">
                <% } %>
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5>
                    <%= camp.title %>
                  </h5>
                  <p class="card-text">
                    <%= camp.description %>
                  </p>
                  <p>
                    <small class="text-muted">
                      <%= camp.location %>
                    </small>
                  </p>

                  <!-- detail view -->
                  <a href="/campground/<%=camp._id%>" class="btn btn-primary">View <%= camp.title %> </a>
                </div>
              </div>
            </div>
          </div>
          <%} %>
      </div>
    </div>
  </div>


<script src="/js/clusterMap.js"></script>