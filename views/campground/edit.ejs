<% layout("layout/boilerplate") %>
  <h1>Edit Campgrounds</h1>

  <form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
    <div>
      <label for="title">Title</label>
      <input type="text" name="title" id="name" value="<%= campground.title %>">
    </div>
    <div>
      <label for="location">Location</label>
      <input type="text" name="location" id="location" value="<%= campground.location %>">
    </div>

    <button>Update campground</button>
  </form>

  <footer>
    <a href="/campground/<%= campground._id  %>">Back to Campground</a>
  </footer>